  <script>
    let noClickCount = 0; // Track how many times "No" is clicked

    function yesClick() {
      // Show the image and a success message
      document.getElementById("message").textContent = "YEYEYYE! ‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è I knew it!";
      document.getElementById("image-container").style.display = "block";
    }

    function noClick() {
      // Show a "Think again" message
      document.getElementById("message").textContent = "Pleaseeeee think again... ü•∫";

      // Make the "Yes" button grow larger
      noClickCount++; // Increase the count
      const yesButton = document.querySelector(".yes");
      yesButton.style.transform = `scale(${1 + noClickCount * 0.2})`; // Increase size gradually
    }
  </script>
